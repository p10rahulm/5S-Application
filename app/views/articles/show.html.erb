<% provide(:title, @article.title) %>
<div class="row">
  <div class="col-md-9">
    <h1 style="color:#B00100; float:left"><%= @article.title%></h1>
  </div>
  <div class="col-md-9">
    <p><span class="user">Article written by: <%= link_to @article.user.name, @article.user %>.</span>
  <span class="timestamp">
  <%= @article.created_at.strftime("Posted on %d/%m/%Y at %I:%M%p.")%>
  </span></p>
  </div>
  <div class="col-md-9">
    <%=raw @article.content %>
  </div>
</div>